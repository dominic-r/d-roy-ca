{
	"name": "@dominic-r/d-roy-ca",
	"version": "0.0.1",
	"type": "module",
	"private": false,
	"publishConfig": {
		"registry": "https://npm.pkg.github.com",
		"access": "restricted"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dominic-r/sdko.org.git",
		"directory": "d-roy-ca"
	},
	"main": "./dist/server.js",
	"exports": {
		".": "./dist/server.js",
		"./server": "./dist/server.js",
		"./client": "./dist/index.html",
		"./client/*": "./dist/*"
	},
	"files": [
		"dist"
	],
	"imports": {
		"#app": "./src/app.ts",
		"#components/*": "./src/components/*",
		"#constants/*": "./src/constants/*",
		"#console": "./src/console/index.ts",
		"#console/*": "./src/console/*",
		"#so": "./src/so/index.ts",
		"#so/*": "./src/so/*",
		"#types": "./src/types/index.ts"
	},
	"scripts": {
		"so:vendor": "bun scripts/vendor-so.ts",
		"dev": "bun run so:vendor && bun run build:frontend && bun run dev:server",
		"dev:frontend": "bun run so:vendor && vite",
		"dev:server": "NODE_ENV=development bun --watch server.ts",
		"build": "bun run so:vendor && tsc && bun run build:frontend && bun run build:server",
		"build:frontend": "vite build",
		"build:server": "mkdir -p .tmp && TMPDIR=$PWD/.tmp bun build server.ts --outfile dist/server.js --target bun",
		"start": "bun run build && bun dist/server.js",
		"test": "bun run so:vendor && bun test",
		"docker": "bun run so:vendor && docker compose up --build",
		"format:apply": "biome check --write .",
		"format:check": "biome check ."
	},
	"dependencies": {
		"@bufbuild/protobuf": "2.10.2",
		"@lit-labs/router": "0.1.4",
		"lit": "3.3.1",
		"urlpattern-polyfill": "10.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@types/bun": "1.3.4",
		"sass": "1.97.0",
		"typescript": "5.9.3",
		"vite": "7.3.0"
	}
}
